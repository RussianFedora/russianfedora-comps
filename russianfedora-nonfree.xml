<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE comps PUBLIC "-//Red Hat, Inc.//DTD Comps info//EN" "comps.dtd">
<comps>
  <group>
   <id>core</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Core</name>
   <description>Smallest possible installation</description>
    <packagelist>
      <packagereq type="mandatory">russianfedora-nonfree-release</packagereq>
    </packagelist>
  </group>
  <group>
    <id>chromium</id>
    <name>Chromium browser</name>
    <name xml:lang="ru">Браузер Chromium</name>
    <description>The Chromium web browser</description>
    <description xml:lang="ru">Веб-браузер Chromium</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq>chromium-pepper-flash</packagereq>
    </packagelist>
  </group>
  <group>
    <id>firefox</id>
    <name>Firefox Web Browser</name>
    <description>The Firefox web browser</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq>flash-plugin</packagereq>
    </packagelist>
  </group>
  <group>
    <id>epiphany</id>
    <name>Epiphany Web Browser</name>
    <description>Epiphany Web Browser for GNOME</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq>flash-plugin</packagereq>
    </packagelist>
  </group>
  <group>
    <id>opera</id>
    <name>Opera browser</name>
    <name xml:lang="ru">Браузер Opera</name>
    <description>The Opera web browser</description>
    <description xml:lang="ru">Веб-браузер Opera</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq>chromium-pepper-flash</packagereq>
      <packagereq>opera-stable</packagereq>
      <packagereq>opera-stable-libffmpeg</packagereq>
    </packagelist>
  </group>
  <group>
   <id>graphical-internet</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Graphical Internet</name>
   <description>This group includes graphical email, Web, and chat clients.</description>
    <packagelist>
      <packagereq type="default">flash-plugin</packagereq>
    </packagelist>
  </group>
  <group>
   <id>hardware-support</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Hardware Support</name>
   <description>This group is a collection of tools for various hardware specific utilities.</description>
    <packagelist>
      <packagereq type="default">b43-firmware</packagereq>
      <packagereq type="optional">akmod-catalist</packagereq>
      <packagereq type="optional">truecrypt</packagereq>
      <packagereq type="optional">xorg-x11-drv-catalyst</packagereq>
      <packagereq type="conditional" requires="xorg-x11-drv-catalyst">kmod-catalyst</packagereq>
    </packagelist>
  </group>
  <group>
    <id>skype</id>
    <name>Skype</name>
    <name xml:lang="ru">Skype</name>
    <description>Free Internet telephony that just works</description>
    <description xml:lang="ru">Свободная интернет телефония, которая работает</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq>skype</packagereq>
      <packagereq type="conditional" requires="plasma-desktop">sni-qt</packagereq>
    </packagelist>
  </group>
  <group>
    <id>viber</id>
    <name>Viber</name>
    <name xml:lang="ru">Viber</name>
    <description>Free instant messages and calls</description>
    <description xml:lang="ru">Бесплатные сообщения и звонки</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq>viber</packagereq>
    </packagelist>
  </group>
  <group>
    <id>telegram</id>
    <name>Telegram</name>
    <name xml:lang="ru">Telegram</name>
    <description>Telegram is a new era of messaging</description>
    <description xml:lang="ru">Telegram - новая эра в обмене сообщениями</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq>telegram-desktop</packagereq>
    </packagelist>
  </group>
  <group>
   <id>sound-and-video</id>
   <default>false</default>
   <uservisible>true</uservisible>
   <name>Sound and Video</name>
   <description>From CD recording to playing audio CDs and multimedia files, this package group allows you to work with sound and video on the system.</description>
    <packagelist>
      <packagereq type="optional">mplayer-faac</packagereq> 
      <packagereq type="optional">sopcast</packagereq> 
    </packagelist>
  </group>
  <group>
    <id>web-server</id>
    <name>Web Server</name>
    <description>These tools allow you to run a Web server on the system.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="optional">traffpro</packagereq>
    </packagelist>
  </group>
</comps>
