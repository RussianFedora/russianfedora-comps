<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE comps PUBLIC "-//Red Hat, Inc.//DTD Comps info//EN" "comps.dtd">
<comps>
  <group>
   <id>core</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Core</name>
   <description>Smallest possible installation</description>
    <packagelist>
      <packagereq type="mandatory">russianfedora-nonfree-release</packagereq>
    </packagelist>
  </group>
  <group>
   <id>graphical-internet</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Graphical Internet</name>
   <description>This group includes graphical email, Web, and chat clients.</description>
    <packagelist>
      <packagereq type="default">flash-plugin</packagereq>
      <packagereq type="optional">opera</packagereq>
      <packagereq type="optional">opera-next</packagereq>
    </packagelist>
  </group>
  <group>
   <id>hardware-support</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Hardware Support</name>
   <description>This group is a collection of tools for various hardware specific utilities.</description>
    <packagelist>
      <packagereq type="default">b43-firmware</packagereq>
      <packagereq type="optional">akmod-catalist</packagereq>
      <packagereq type="optional">truecrypt</packagereq>
      <packagereq type="optional">xorg-x11-drv-catalyst</packagereq>
      <packagereq type="conditional" requires="xorg-x11-drv-catalyst">kmod-catalyst</packagereq>
    </packagelist>
  </group>
  <group>
   <id>java</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Java</name>
   <description>Support for running programs written in the Java programming language.</description>
    <packagelist>
      <packagereq type="optional">java-1.6.0-sun-compat</packagereq>
      <packagereq type="optional">jdk</packagereq>
    </packagelist>
  </group>
  <group>
   <id>sound-and-video</id>
   <default>false</default>
   <uservisible>true</uservisible>
   <name>Sound and Video</name>
   <description>From CD recording to playing audio CDs and multimedia files, this package group allows you to work with sound and video on the system.</description>
    <packagelist>
      <packagereq type="optional">mplayer-faac</packagereq> 
      <packagereq type="optional">skype</packagereq> 
      <packagereq type="optional">skype4pidgin</packagereq> 
      <packagereq type="optional">sopcast</packagereq> 
    </packagelist>
  </group>
  <group>
    <id>web-server</id>
    <name>Web Server</name>
    <description>These tools allow you to run a Web server on the system.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="optional">traffpro</packagereq>
    </packagelist>
  </group>
</comps>
