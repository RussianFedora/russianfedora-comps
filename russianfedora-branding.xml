<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE comps PUBLIC "-//Red Hat, Inc.//DTD Comps info//EN" "comps.dtd">
<comps>
  <group>
   <id>core</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Core</name>
   <description>Smallest possible installation</description>
    <packagelist>
      <packagereq type="mandatory">russianfedora-branding-release</packagereq>
    </packagelist>
  </group>
  <group>
    <id>additional-proprietary-repositories</id>
    <name>Additional proprietaty repositories support</name>
    <name xml:lang="ru">Поддержка дополнительных проприетарных репозиториев</name>
    <description>Enable some additional proprietary repositories, like Skype, Google Chrome, Slack and others.</description>
    <description xml:lang="ru">Подключение дополнительных проприетарных репозиториев, таких как Skype, Google Chrome, Slack и других.</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq>rfremix-config-external-repos</packagereq>
    </packagelist>
  </group>
  <group>
    <id>rfremix-workstation-product</id>
    <name>RFRemix Workstation product core</name>
    <description>Packages mandatory for the workstation product.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq>rfremix-config-gnome</packagereq>
      <packagereq>rfremix-config</packagereq>
      <packagereq>rfremix-logos</packagereq>
      <packagereq>rfremix-release-workstation</packagereq>
    </packagelist>
  </group>
  <group>
    <id>xfce-desktop</id>
    <name>Xfce</name>
    <description>A lightweight desktop environment that works well on low end machines.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq>rfremix-config</packagereq>
    </packagelist>
  </group>
</comps>
