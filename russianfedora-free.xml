<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE comps PUBLIC "-//Red Hat, Inc.//DTD Comps info//EN" "comps.dtd">
<comps>
  <group>
   <id>authoring-and-publishing</id>
   <default>False</default>
   <uservisible>True</uservisible>
   <name>Authoring and Publishing</name>
   <description>These tools allow you to create documents in the DocBook format and convert them into HTML, PDF, Postscript, and text.</description>
    <packagelist>
      <packagereq type="conditional" requires="texlive">texlive-cm-super-fonts</packagereq>
      <packagereq type="optional">cuneiform</packagereq>
      <packagereq type="optional">cuneiform-qt</packagereq>
      <packagereq type="optional">yagf</packagereq>
    </packagelist>
  </group>
  <group>
   <id>core</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Core</name>
   <description>Smallest possible installation</description>
    <packagelist>
      <packagereq type="mandatory">russianfedora-free-release</packagereq>
    </packagelist>
  </group>
  <group>
    <id>chromium</id>
    <name>Chromium browser</name>
    <name xml:lang="ru">Браузер Chromium"</name>
    <description>The Chromium web browser</description>
    <description xml:lang="ru">Веб-браузер Chromium</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq>chromium</packagereq>
    </packagelist>
  </group>
  <group>
    <id>fonts</id>
    <name>Fonts</name>
    <description>Fonts packages for rendering text on the desktop.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="default">ubuntu-font-family</packagereq>
      <packagereq type="optional">fontconfig-infinality</packagereq>
    </packagelist>
  </group>
  <group>
    <id>games</id>
    <name>Games and Entertainment</name>
    <description>Various ways to relax and spend your free time.</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="optional">dreamchess</packagereq>
      <packagereq type="optional">playonlinux</packagereq>
      <packagereq type="optional">playonlinux-dosbox-support</packagereq>
    </packagelist>
  </group>
  <group>
   <id>gnome-desktop</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>GNOME Desktop Environment</name>
   <description>GNOME is a powerful graphical user interface which includes a panel, desktop, system icons, and a graphical file manager.</description>
    <packagelist>
      <packagereq>mailnag</packagereq>
      <packagereq>gstreamer1-plugins-ugly</packagereq>
      <packagereq>gstreamer1-libav</packagereq>
      <packagereq>gstreamer1-plugins-bad</packagereq>
    </packagelist>
  </group>
  <group>
    <id>hardware-support</id>
    <name>Hardware Support</name>
    <description>This group is a collection of tools for various hardware specific utilities.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="default">madwimax</packagereq>
      <packagereq type="optional">akmod-brcm80211</packagereq>
      <packagereq type="optional">akmod-rt3062</packagereq>
      <packagereq type="optional">akmod-rt3090</packagereq>
      <packagereq type="optional">akmod-samsung-backlight</packagereq>
      <packagereq type="optional">brcm80211-common</packagereq>
      <packagereq type="conditional" requires="brcm80211-common">kmod-brcm80211</packagereq>
      <packagereq type="optional">rt3062</packagereq>
      <packagereq type="conditional" requires="rt3062">kmod-rt3062</packagereq>
      <packagereq type="optional">rt3090</packagereq>
      <packagereq type="conditional" requires="rt3090">kmod-rt3090</packagereq>
      <packagereq type="optional">samsung-backlight-kmod-common</packagereq>
      <packagereq type="conditional" requires="samsung-backlight-kmod-common">kmod-samsung-backlight</packagereq>
    </packagelist>
  </group>
  <group>
    <id>lxde-desktop</id>
    <name>LXDE</name>
    <description>LXDE is a lightweight X11 desktop environment designed for computers with low hardware specifications like netbooks, mobile devices or older computers.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq>gsmartcontrol</packagereq>
      <packagereq>gstreamer1-plugins-ugly</packagereq>
      <packagereq>gstreamer1-libav</packagereq>
      <packagereq>gstreamer1-plugins-bad</packagereq>
    </packagelist>
  </group>
  <group>
   <id>xfce-desktop</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>XFCE</name>
   <description>A lightweight desktop environment that works well on low end machines.</description>
    <packagelist>
      <packagereq>gsmartcontrol</packagereq>
      <packagereq>gstreamer1-plugins-ugly</packagereq>
      <packagereq>gstreamer1-libav</packagereq>
      <packagereq>gstreamer1-plugins-bad</packagereq>
    </packagelist>
  </group>
  <group>
   <id>graphical-internet</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Graphical Internet</name>
   <description>This group includes graphical email, Web, and chat clients.</description>
    <packagelist>
      <packagereq type="optional">chromium</packagereq>
      <packagereq type="optional">flush</packagereq>
      <packagereq type="optional">mrim-prpl</packagereq>
      <packagereq type="optional">pidgin-facebookchat</packagereq>
      <packagereq type="optional">psi-plus</packagereq>
      <packagereq type="optional">psi-plus-plugins</packagereq>
      <packagereq type="optional">vacuum</packagereq>
      <packagereq type="optional">yachat</packagereq>
    </packagelist>
  </group>
  <group>
   <id>kde-desktop</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>KDE (K Desktop Environment)</name>
   <description>KDE is a powerful graphical user interface which includes a panel, desktop, system icons, and a graphical file manager.</description>
    <packagelist>
      <packagereq type="optional">eiskaltdcpp-qt</packagereq>
      <packagereq type="conditional" requires="gstreamer1">gstreamer1-plugins-ugly</packagereq>
      <packagereq type="conditional" requires="gstreamer1">gstreamer1-libav</packagereq>
      <packagereq type="conditional" requires="gstreamer1">gstreamer1-plugins-bad</packagereq>
    </packagelist>
  </group>
  <group>
   <id>sound-and-video</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Sound and Video</name>
   <description>From CD recording to playing audio CDs and multimedia files, this package group allows you to work with sound and video on the system.</description>
    <packagelist>
      <packagereq type="default">libdvdcss</packagereq>
      <packagereq type="conditional" requires="gstreamer1">gstreamer1-libav</packagereq>
      <packagereq type="conditional" requires="gstreamer1">gstreamer1-plugins-ugly</packagereq>
      <packagereq type="optional">2mandvd</packagereq>
      <packagereq type="optional">aegisub</packagereq>
      <packagereq type="optional">bino</packagereq>
      <packagereq type="optional">deadbeef</packagereq>
      <packagereq type="optional">foobnix</packagereq>
      <packagereq type="optional">moc</packagereq>
      <packagereq type="optional">mpg123</packagereq>
      <packagereq type="optional">openshot</packagereq>
      <packagereq type="optional">rosa-media-player</packagereq>
    </packagelist>
  </group>
  <group>
    <id>web-server</id>
    <name>Web Server</name>
    <description>These tools allow you to run a Web server on the system.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="optional">wt</packagereq>
    </packagelist>
  </group>
  <group>
   <id>system-tools</id>
   <default>False</default>
   <uservisible>True</uservisible>
   <name>System Tools</name>
   <description>This group is a collection of various tools for the system, such as the client for connecting to SMB shares and tools to monitor network traffic.</description>
    <packagelist>
      <packagereq type="optional">freerdp</packagereq>
      <packagereq type="optional">shmux</packagereq>
      <packagereq type="optional">vpnpptp</packagereq>
    </packagelist>
  </group>
  <group>
    <id>virtualization</id>
    <name>Virtualization</name>
    <description>These packages provide a virtualization environment.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="optional">RemoteBox</packagereq>
    </packagelist>
  </group>
</comps>
