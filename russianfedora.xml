<comps>
  <group>
    <id>base-x</id>
    <name>base-x</name>
    <description>Local X.org display server</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq>mesa-libGL</packagereq>
      <packagereq>mesa-libGLU</packagereq>
    </packagelist>
  </group>
  <group>
   <id>core</id>
   <default>false</default>
   <uservisible>false</uservisible>
   <name>Core</name>
   <description>Smallest possible installation</description>
    <packagelist>
      <packagereq type="mandatory">kernel-modules-extra</packagereq>
      <packagereq type="mandatory">rfremix-release</packagereq>
      <packagereq type="mandatory">rpmfusion-free-release</packagereq>
      <packagereq type="mandatory">rpmfusion-nonfree-release</packagereq>
