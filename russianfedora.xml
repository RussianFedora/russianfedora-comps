      <packagereq>NetworkManager-openconnect</packagereq>
      <packagereq>NetworkManager-openswan</packagereq>
      <packagereq>NetworkManager-openvpn-gnome</packagereq>
      <packagereq>NetworkManager-pptp-gnome</packagereq>
      <packagereq>NetworkManager-pptp-gnome</packagereq>
