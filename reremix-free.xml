<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE comps PUBLIC "-//Red Hat, Inc.//DTD Comps info//EN" "comps.dtd">
<comps>
  <group>
   <id>tex</id>
   <default>False</default>
   <uservisible>True</uservisible>
   <display_order>1024</display_order>
   <name>TeX support</name>
   <description>Support for the TeX document formatting system.</description>
    <packagelist>
      <packagereq type="conditional" requires="texlive">texlive-cm-super-fonts</packagereq>
    </packagelist>
  </group>
  <group>
   <id>core</id>
   <default>True</default>
   <uservisible>False</uservisible>
   <name>Core</name>
   <description>Smallest possible installation</description>
    <packagelist>
      <packagereq type="mandatory">puias-release</packagereq>
      <packagereq type="mandatory">russianfedora-free-release</packagereq>
    </packagelist>
  </group>
  <group>
    <id>fonts</id>
    <name>Fonts</name>
    <description>Fonts packages for rendering text on the desktop.</description>
    <default>true</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="default">ubuntu-font-family</packagereq>
      <packagereq type="optional">fontconfig-infinality</packagereq>
    </packagelist>
  </group>
  <group>
   <id>general-desktop</id>
   <default>True</default>
   <uservisible>True</uservisible>
   <display_order>1024</display_order>
    <name>General Purpose Desktop</name>
    <description>A general purpose desktop.</description>
    <packagelist>
      <packagereq type="default">paman</packagereq>
      <packagereq type="default">paprefs</packagereq>
      <packagereq type="default">pavucontrol</packagereq>
      <packagereq type="default">pavumeter</packagereq>
      <packagereq type="optional">deadbeef</packagereq>
      <packagereq type="optional">eiskaltdcpp-gtk</packagereq>
      <packagereq type='optional'>evince-djvu-backend</packagereq>
    </packagelist>
  </group>
  <group>
    <id>internet-applications</id>
    <name>Internet Applications</name>
    <description>Email, chat, and video conferencing software.</description>
    <default>true</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type='optional'>chromium</packagereq>
    </packagelist>
  </group>
  <group>
   <id>xfce-desktop</id>
   <default>False</default>
   <uservisible>True</uservisible>
   <display_order>1024</display_order>
   <name>XFCE</name>
   <description>A lightweight desktop environment that works well on low end machines.</description>
    <packagelist>
      <packagereq type="default">paman</packagereq>
      <packagereq type="default">paprefs</packagereq>
      <packagereq type="default">pavucontrol</packagereq>
      <packagereq type="default">pavumeter</packagereq>
      <packagereq type="default">gsmartcontrol</packagereq>
      <packagereq type="default">thunderbird</packagereq>
      <packagereq type="optional">deadbeef</packagereq>
      <packagereq type="optional">eiskaltdcpp-gtk</packagereq>
      <packagereq type="optional">qbittorrent</packagereq>
    </packagelist>
  </group>
  <group>
   <id>kde-desktop</id>
   <default>False</default>
   <uservisible>True</uservisible>
   <display_order>1024</display_order>
    <name>KDE Desktop</name>
    <description>A KDE desktop.</description>
    <packagelist>
      <packagereq type="conditional" requires="qmmp">qmmp-plugins-freeworld</packagereq>
      <packagereq type="default">clementine</packagereq>
      <packagereq type="optional">eiskaltdcpp-qt</packagereq>
    </packagelist>
  </group>
  <category>
   <id>desktops</id>
   <display_order>10</display_order>
   <name>Desktop Environments</name>
   <description>Desktop environments</description>
    <grouplist>
     <groupid>general-desktop</groupid>
     <groupid>kde-desktop</groupid>
     <groupid>xfce-desktop</groupid>
    </grouplist>
  </category>
  <category>
   <id>applications</id>
   <display_order>80</display_order>
   <name>Applications</name>
   <description>Applications to perform a variety of tasks</description>
    <grouplist>
     <groupid>internet-applications</groupid>
     <groupid>tex</groupid>
    </grouplist>
  </category>
  <category>
   <id>desktops</id>
   <display_order>70</display_order>
   <name>Desktops</name>
   <description>Desktops and thin clients.</description>
    <grouplist>
     <groupid>fonts</groupid>
    </grouplist>
  </category>
</comps>
