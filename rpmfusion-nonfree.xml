<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE comps PUBLIC "-//Red Hat, Inc.//DTD Comps info//EN" "comps.dtd">
<comps>
  <group>
    <id>core</id>
    <name>Core</name>
    <description>Smallest possible installation</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="mandatory">rpmfusion-nonfree-release</packagereq>
    </packagelist>
  </group>
  <group>
    <id>games</id>
    <name>Games and Entertainment</name>
    <description>Various ways to relax and spend your free time.</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="optional">bsnes</packagereq>
      <packagereq type="optional">d1x-full</packagereq>
      <packagereq type="optional">d1x-shareware</packagereq>
      <packagereq type="optional">doom-shareware</packagereq>
      <packagereq type="optional">ufoai</packagereq>
      <packagereq type="optional">xrick</packagereq>
      <packagereq type="optional">dega-sdl</packagereq>
      <packagereq type="optional">dgen-sdl</packagereq>
      <packagereq type="optional">e-uae</packagereq>
      <packagereq type="optional">Frodo</packagereq>
      <packagereq type="optional">Frodo-gui</packagereq>
      <packagereq type="optional">fuse-emulator-roms</packagereq>
      <packagereq type="optional">gens</packagereq>
      <packagereq type="optional">mednafen</packagereq>
      <packagereq type="optional">plus4emu</packagereq>
      <packagereq type="optional">qmc2</packagereq>
      <packagereq type="optional">raine</packagereq>
      <packagereq type="optional">sdlmame</packagereq>
      <packagereq type="optional">sdlmame-data-artwork</packagereq>
      <packagereq type="optional">sdlmame-data</packagereq>
      <packagereq type="optional">sdlmame-data-roms</packagereq>
      <packagereq type="optional">sdlmame-data-samples</packagereq>
      <packagereq type="optional">sdlmame-debug</packagereq>
      <packagereq type="optional">sdlmame-ldplayer</packagereq>
      <packagereq type="optional">sdlmame-tools</packagereq>
      <packagereq type="optional">sdlmess</packagereq>
      <packagereq type="optional">sdlmess-data</packagereq>
      <packagereq type="optional">sdlmess-debug</packagereq>
      <packagereq type="optional">sdlmess-tools</packagereq>
      <packagereq type="optional">snes9x</packagereq>
      <packagereq type="optional">vice</packagereq>
      <packagereq type="optional">xcpc</packagereq>
      <packagereq type="optional">yapeSDL</packagereq>
    </packagelist>
  </group>
  <group>
    <id>hardware-support</id>
    <name>Hardware Support</name>
    <description>This group is a collection of tools for various hardware specific utilities.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="optional">akmod-madwifi</packagereq>
      <packagereq type="optional">akmod-nvidia</packagereq>
      <packagereq type="optional">akmod-nvidia-173xx</packagereq>
      <packagereq type="optional">akmod-nvidia-96xx</packagereq>
      <packagereq type="optional">akmod-slmodem</packagereq>
      <packagereq type="optional">akmod-wl</packagereq>
      <packagereq type="optional">broadcom-wl</packagereq>
      <packagereq type="optional">Cg</packagereq>
      <packagereq type="optional">ogre-cg</packagereq>
      <packagereq type="optional">slmodem</packagereq>
      <packagereq type="optional">xorg-x11-drv-catalyst</packagereq>
      <packagereq type="conditional" requires="xorg-x11-drv-catalyst">kmod-catalyst</packagereq>
      <packagereq type="optional">xorg-x11-drv-nvidia</packagereq>
      <packagereq type="conditional" requires="xorg-x11-drv-nvidia">kmod-nvidia</packagereq>
      <packagereq type="optional">xorg-x11-drv-nvidia-173xx</packagereq>
      <packagereq type="conditional" requires="xorg-x11-drv-nvidia-173xx">kmod-nvidia-173xx</packagereq>
      <packagereq type="optional">xorg-x11-drv-nvidia-96xx</packagereq>
      <packagereq type="conditional" requires="xorg-x11-drv-nvidia-96xx">kmod-nvidia-96xx</packagereq>
    </packagelist>
  </group>
  <group>
    <id>sound-and-video</id>
    <name>Sound and Video</name>
    <description>From CD recording to playing audio CDs and multimedia files, this package group allows you to work with sound and video on the system.</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="optional">gstreamer-plugins-bad-nonfree</packagereq>
      <packagereq type="optional">sidplay</packagereq>
      <packagereq type="optional">uade</packagereq>
    </packagelist>
  </group>
  <group>
    <id>system-tools</id>
    <name>System Tools</name>
    <description>This group is a collection of various tools for the system, such as the client for connecting to SMB shares and tools to monitor network traffic.</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="default">unrar</packagereq>
      <packagereq type="optional">jad</packagereq>
      <packagereq type="optional">lha</packagereq>
      <packagereq type="optional">unace</packagereq>
    </packagelist>
  </group>
  <group>
    <id>fonts</id>
    <name>Fonts</name>
    <description>Fonts packages for rendering text on the desktop.</description>
    <default>false</default>
    <uservisible>false</uservisible>
    <packagelist>
      <packagereq type="optional">larabie-decorative-fonts</packagereq>
      <packagereq type="optional">larabie-straight-fonts</packagereq>
      <packagereq type="optional">larabie-uncommon-fonts</packagereq>
    </packagelist>
  </group>
</comps>
